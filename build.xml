<?xml version="1.0" encoding="UTF-8"?>
<project name="sengass4" default="compile" basedir=".">
	
	<path id="project-classpath">
		<fileset dir="WebContent/WEB-INF/lib" includes="*.jar" />
	</path>
	
	<target name="clean">
		<delete dir="WebContent/WEB-INF/classes"/>
	</target>
	<target name="compile" depends="clean">
		<mkdir dir="WebContent/WEB-INF/classes"/>
		<javac srcdir="src" includes="*.java" destdir="WebContent/WEB-INF/classes" classpathref="project-classpath"/>
		<copy file="flightData.txt" tofile="WebContent/WEB-INF/flightData.txt"/>
		<copy file="queryData.txt" tofile="WebContent/WEB-INF/queryData.txt"/>
	</target>
</project>